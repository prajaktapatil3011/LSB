#include <stdio.h>
#include <fcntl.h>
int main(int agc, char *argv[])
{
	char Fname[20];
	printf("Enter the File Name that you want to open");
	scanf("%s", Fname);
	
	fd = open(Fname, O_RDONLY);
	if(fd == -1)
	{
		printf("Unable to open the File\n");
		return -1;
	}
	else
	{
		printf("File is successfully opened with FD %d \n",fd);
	}
	return 0;
}
